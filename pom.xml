                <module name="Checker">
                  <module name="BeforeExecutionExclusionFileFilter">
                    <property name="fileNamePattern" value=".*[\\/]src[\\/]main[\\/]java[\\/]com[\\/]teragrep[\\/]hbs_03[\\/]jooq[\\/]generated[\\/].*$"></property>
                  </module>
